global:
  scrape_interval: 1m
  scrape_timeout: 45s

  external_labels:
    instance: demo-datalab
    environment: production
    app: datalab
    datalab: demo

scrape_configs:
  - job_name: 'node-exporter'
    static_configs:
      - targets: ['localhost:9100']
        labels:
          instance: demo-datalab
          service: system 

  - job_name: 'cadvisor'
    static_configs:
      - targets: ['localhost:8080']
        labels:
          service: docker
          instance: demo-datalab

remote_write:
  - url: {{ prometheus_remote_write_url }}
    basic_auth:
      username: {{ prometheus_username }}
      password: {{ prometheus_password }}
